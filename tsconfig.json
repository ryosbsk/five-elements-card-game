{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "script.js",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}